@using LMS_Grupp4.Models
@using Microsoft.AspNet.Identity;
@model IEnumerable<LMS_Grupp4.Models.LMS_Models.Course>

@{
    ViewBag.Title = "Index";
    int personalCourseCount = Model.Where(m => m.Users.SingleOrDefault(u => u.Id == User.Identity.GetUserId()) != null).Count();
}
<div class="row" style="padding-bottom: 20px">
    <div class="col-md-4">
        <small>
            Student ID: @User.Identity.GetUserId()
        </small>
    </div>
    <div class="col-md-4 text-center">
        <small>Courses Overview</small>
    </div>
    <div class="col-lg-4 text-right">
        <small>@DateTime.Now.DayOfWeek, @DateTime.Now.Date.Day @DateTime.Now.Year</small>
    </div>
</div>
<div class="jumbotron">

    <h2><a href="@Url.Action("Index", "Student")">@User.Identity.GetUserRealName()</a>, welcome!</h2>
    <p>
        Here you can see all your courses and available courses on our Learning platform.<br />
        Choose a course to view details.<br />
        You are enrolled in <b>@personalCourseCount</b> course(s).
        <small>
            Select a course to see all its details...
        </small>
    </p>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="well well-lg">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <small class="text-center">Search For a course</small>
                        <form method="post" action="@Url.Action("SearchCourseByName", "Search")" class="form-inline">
                            <input type="text" name="search" id="search" placeholder="Ex. Chemistry, Math..." class="form-control"/>
                            <input type="submit" name="submit" id="submit" value="Go" class="btn btn-success"/>
                        </form>
                    </div>
                </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <h4 class="text-center">My Courses</h4>
                </div>
            </div>
            <div class="panel-body">
                <p>
                    This is the list of all your courses with relevant information concerning each course.<br />
                    Click on the Course to open different sections.
                </p>
                <hr />
                <table class="table table-bordered">
                    <tr>
                        <th class="text-center">
                            Code
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.CourseName)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th class="text-center">
                            Assignments
                        </th>
                        <th class="text-center">
                            Shared Files
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                LMS-@item.ID-C
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Course", new { id = item.ID })" title="Details for @item.CourseName">@Html.DisplayFor(modelItem => item.CourseName)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <a href="@Url.Action("Index", "Assignment", new { id = item.ID})">@item.Assignments.Count</a>
                            </td>
                            <td>
                                <a href="@Url.Action("Index", "File", new { id = item.ID})">@item.Files.Count</a>
                            </td>
                        </tr>
                    }
                </table>
                @if (personalCourseCount <= 0)
                {
                    <hr />
                    <h2 class="alert alert-warning">You have no courses!</h2>
                    <p>
                        Consider applying for one. <br />
                        Or simply view a course details to apply.
                    </p>
                    <small>All your course will be displayed in the table above.</small>
                }
            </div>
        </div>
        <a href="@Url.Action("Index", "Student")">Homepage</a>
    </div>
    <div class="col-md-3">
        @Html.Action("FiveMostPopularCourses", "Course")
    </div>
</div>
