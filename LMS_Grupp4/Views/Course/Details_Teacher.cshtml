@using Microsoft.AspNet.Identity;
@model LMS_Grupp4.Models.LMS_Models.Course

@{
    ViewBag.Title = Model.CourseName + " Details";
    var roleManager = new LMS_Grupp4.Repositories.LMSRepository().GetRoleManager();
    var studentRoleID = roleManager.FindByName("student").Id;
}
<div class="row" style="padding-bottom: 20px">
    <div class="col-md-4">
        <small>
            Teacher ID: @User.Identity.GetUserId()
        </small>
    </div>
    <div class="col-md-4 text-center">
        <small>Course Details</small>
    </div>
    <div class="col-lg-4 text-right">
        <small>@DateTime.Now.DayOfWeek, @DateTime.Now.Date.Day @DateTime.Now.Year</small>
    </div>
</div>
<div class="jumbotron">
    <h2>@Model.CourseName</h2>
    <p>
        @Model.Description <br />
    </p>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="btn-toolbar">
                    <a href="@Url.Action("CreateEvent", "Course", new { id = Model.ID })" class="btn btn-success btn-sm">Add Event <span class="glyphicon glyphicon-calendar"></span></a>
                    <a href="@Url.Action("ViewEventsByCourse", "Course", new { id = Model.ID })" class="btn btn-primary btn-sm">View Course Events <span class="glyphicon glyphicon-eye-open"></span></a>
                </div>
                
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <h4 class="text-center">Details</h4>
                </div>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.CourseName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CourseName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt>
                        Pending Applications
                    </dt>
                    <dd>
                        @Model.CourseApplications.Where(ca => ca.Status == false).Count()
                    </dd>
                    <dt>
                        Resolved Applications
                    </dt>
                    <dd>
                        @Model.CourseApplications.Where(ca => ca.Status == true).Count()
                    </dd>
                    <dt>
                        Schema
                    </dt>
                    <dd>
                        <p>Schema period: <b>@Model.ClassSchema.StartDate</b> - <b>@Model.ClassSchema.EndDate</b></p>
                        <hr />
                        <div class="schedule-box" ng-controller="scheduleCtrl">
                            <input type="hidden" value="@Model.ClassSchema.Schedule" ng-model="obj.schedule" ng-init="obj.schedule='@Model.ClassSchema.Schedule' " />

                            <div id="scheduleRender" ng-show="show">
                                <p>Hey</p>
                            </div>
                            @*Html.Raw(Model.ClassSchema.Schedule)*@
                        </div>
                    </dd>
                    <dt>
                        Students
                    </dt>
                    <dd>
                        <ul>
                            @foreach (var user in Model.Users.Where(u => u.Roles.Any(r => r.RoleId == studentRoleID)).ToList())
                            {
                                <li><a href="@Url.Action("Details", "Student", new { id = user.Id})">@user.RealName</a></li>
                            }
                        </ul>
                    </dd>
                </dl>
                <hr />
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a href="@Url.Action("Create", "Course")" class="btn btn-success btn-sm">Create New Course <span class="glyphicon glyphicon-plus"></span></a>
                        
                    </div>
                    <div class="btn-group">
                        <a href="@Url.Action("Edit", "Course", new { id = Model.ID })" class="btn btn-default btn-sm">Edit <span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="@Url.Action("Delete", "Course", new { id = Model.ID })" class="btn btn-danger btn-sm">Delete <span class="glyphicon glyphicon-remove"></span></a>
                    </div>
                    <div class="btn-group">
                        <a href="@Url.Action("Index", "CourseApplication", new { id = Model.ID })" class="btn btn-default btn-sm" title="Applications for @Model.CourseName">View Applications</a>
                    </div>
                    <div class="btn-group">
                        <a href="@Url.Action("IndexCourse", "Assignment", new { courseID = Model.ID })" class="btn btn-default btn-sm">View Assignments</a>
                        <a href="@Url.Action("Create", "Assignment", new { courseID = Model.ID })" class="btn btn-default btn-sm btn-info">Create New Assignment <span class="glyphicon glyphicon-plus"></span></a>
                    </div>
                </div>
            </div>
        </div>
        <a href="@Url.Action("Index", "Course")">Back To List</a>
    </div>
    <div class="col-md-4" ng-controller="enrollStudentCtrl">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">
                    <h4 class="text-center">Enroll Student</h4>
                </div>
            </div>
            <div class="panel-body">
                <p>
                    Quickly search for a student by email to enroll him to this course
                </p>
                <hr />
                <form>
                    <div class="form-group">
                        <input type="hidden" value="json" name="resultFormat" ng-model="searchDetails.resultFormat" />
                        <label class="control-label col-md-2">Email:</label>
                        <div class="col-md-10">
                            <input type="text" name="email" id="email" class="form-control" ng-model="searchDetails.email" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <hr />
                            <button class="btn btn-default btn-sm" ng-click="searchStudentByEmail()">Search</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-footer">
                <small>
                    The result will appear under this card.<br />
                    Simply click the result card to enroll the student.
                </small>
            </div>
        </div>

        <div ng-show="studentFound">
            <hr />
            <div class="well well-sm well" ng-click="enrollStudent(@Model.ID)" style="cursor:pointer; background-color: white;box-shadow: 0px 5px 10px #CCC">
                <blockquote>
                    <h3>{{ student.name }}</h3>
                    <small>{{ student.email }}</small>
                </blockquote>
            </div>
        </div>
        <div ng-show="enrollSuccessful">
            <hr />
            <div class="well well-sm well success" style="cursor:pointer;box-shadow: 0px 5px 10px #CCC">
                <h3>Success</h3>
                <hr />
                <p>
                    Student {{ student.name }} successfully enrolled to this course.
                </p>
            </div>
        </div>
        <div ng-show="studentNotFound">
            <hr />
            <div class="well well-sm well danger" style="cursor:pointer; box-shadow: 0px 5px 10px #CCC">
                <h3>No Result</h3>
                <hr />
                <p>
                    No student found with this email. <br />
                    This must mean the email was misspelled or the email does not belong to the student.
                </p>
            </div>
        </div>
    </div>
</div>
