@model LMS_Grupp4.Models.LMS_Models.Evaluation
@using LMS_Grupp4.Models
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Assignment Details: Full";
    var userManager = new LMS_Grupp4.Repositories.LMSRepository().GetUserManager();
    bool isTeacher = (User.IsInRole("teacher")) ? true : false;
    int studentCount = Model.Assignment.Course.Users.Where(u => userManager.IsInRole(u.Id, "student") == true).Count();
    studentCount = studentCount <= 0 ? 1 : studentCount;
    int submissionCount = Model.Assignment.Evaluations.Count;
    double rawPercent = ((double)submissionCount / studentCount) * 100;
    double percent = Math.Round(rawPercent, 2);

}


<div class="row" style="padding-bottom: 20px">
    <div class="col-md-4">
        @if (isTeacher)
        {
            <small>
                Teacher ID: @User.Identity.GetUserId()
            </small>
        }
        else
        {
            <small>
                Student ID: @User.Identity.GetUserId()
            </small>
        }

    </div>
    <div class="col-md-4 text-center">
        <small>Assignments Details: Full</small>
    </div>
    <div class="col-lg-4 text-right">
        <small><span class="glyphicon glyphicon-calendar"></span> @DateTime.Now.DayOfWeek, @DateTime.Now.Date.Day @DateTime.Now.Year <span class="glyphicon glyphicon-time"></span> @DateTime.Now.ToShortTimeString()</small>
    </div>
</div>

<div class="jumbotron">
    <h2>Details for Assignment <a href="@Url.Action("Details", "Assignment", new { id = Model.ID})">@Model.Assignment.Name</a></h2>
    <h3>This is an assignment for the course <a href="@Url.Action("Details", "Course",new { id = Model.Assignment.Course.ID})">@Model.Assignment.Course.CourseName</a>.</h3>
    @if (isTeacher)
    {
        <p>
            Here you can see the full details for this assignment, including the evaluation.<br />
            And also a list over students that currently has this assignment.<br />
            Average <b> @percent %</b> of submissions or <b>@submissionCount / @studentCount</b>.
        </p>
    }
    else
    {
        <p>
            Here you can see the full details for this assignment.<br />
            Including the assignment evaluation.
        </p>
    }
</div>

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">
                    <h2 class="text-center">Assignment details</h2>
                </div>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt class="text-center">
                        Passed
                    </dt>
                    <dd>@(Model.IsPassed ? "Yes" : "No")</dd>
                    <dt>
                        Issue date
                    </dt>
                    <dd>@Model.Assignment.IssueDate.ToShortDateString()</dd>
                    <dt>
                        Due date
                    </dt>
                    <dd>@Convert.ToDateTime(Model.Assignment.DueDate).ToShortDateString()</dd>
                    <dt>
                        Over due
                    </dt>
                    <dd>@(Model.Assignment.IsExpired ? "Outdated" : "To Date")</dd>
                    <dt>
                        Assignment grade
                    </dt>
                    <dd>@Html.DisplayFor(model => Model.Mark)</dd>
                    <dt>
                        Max score
                    </dt>
                    <dd>@Html.DisplayFor(model => Model.Assignment.MaxScore)</dd>
                    <dt>
                        Score
                    </dt>
                    <dd>@Html.DisplayFor(model => Model.Score)</dd>
                    <dt>
                        Percentage
                    </dt>
                    <dd>@Html.DisplayFor(model => Model.Percentage)</dd>
                    <dt>
                        Teacher's Comment
                    </dt>
                    <dd>@Html.DisplayFor(model => Model.Message)</dd>
                    <dt>
                        Course
                    </dt>
                    <dd><a href="@Url.Action("Details", "Course", new { id = @Model.Assignment.Course.ID })">@Model.Assignment.Course.CourseName</a></dd>
                    <dt>
                        Student
                    </dt>
                    <dd><a href="@Url.Action("Details", "Student", new { id = @Model.Student.Id })">@Model.Student.RealName</a></dd>
                    <dt>
                        File
                    </dt>
                    <dd>
                        @if (Model.LMSFile != null)
                        {
                            <a href="@Url.Action("Index", "File", new { id = @Model.LMSFile.ID })">@Model.LMSFile.Name</a>
                        }
                        else
                        {
                            <span>No file attached.</span>
                        }
                    </dd>

                </dl>
            </div>
        </div>
        
    </div>
</div>

<div>
    <a href="@Url.Action("IndexUser", "Assignment")">Back To Assignments</a>
</div>




