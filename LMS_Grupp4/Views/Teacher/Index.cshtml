@model IEnumerable<LMS_Grupp4.Models.ApplicationUser>
@using LMS_Grupp4.Models
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="jumbotron">
    <h1>Index</h1>
    <h2>You are logged in as Teacher: @User.Identity.GetUserRealName()</h2>
    <small>ID: @ViewBag.UserID</small>
</div>

<td>
    @Html.ActionLink("Course Applications", "Index", "Course", new { id = User.Identity.GetUserId() }) |
    @Html.ActionLink("Program Applications", "Index", "ProgramClass", new { id = User.Identity.GetUserId() })
    <br /><br />
</td>

<td>
    @Html.ActionLink("My Assignments", "My Assiggnments", new { id = User.Identity.GetUserId() }) | 
    @Html.ActionLink("My Files", "Files", new { id = User.Identity.GetUserId() }) |  
    @Html.ActionLink("My Programs", "ProgramClasses", new { id = User.Identity.GetUserId() }) |
    @Html.ActionLink("My Schemas", "ClassSchemas", new { id = User.Identity.GetUserId() }) | })
</td>


<p>
    <a href="@Url.Action("Register", "Account")">Add New Student</a>
</p>

<p>
    <a href="@Url.Action("Create", "Course")">Create Course</a>
</p>


<td>
    @Html.ActionLink("Apply Student to Course", "AddCourse", new { id = User.Identity.GetUserId() })
    <br /><br />
</td>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RealName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RealName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>