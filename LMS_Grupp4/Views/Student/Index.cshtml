@model LMS_Grupp4.Models.LMS_ViewModels.Student_IndexViewModel
@using LMS_Grupp4.Models
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
}

<div class="row" style="padding-bottom: 20px">
    <div class="col-md-4">
        <small>
            Student ID: @User.Identity.GetUserId()
        </small>
    </div>
    <div class="col-md-4 text-center">
        <small>Student Overview</small>
    </div>
    <div class="col-lg-4 text-right">
        <small>@DateTime.Now.DayOfWeek, @DateTime.Now.Date.Day @DateTime.Now.Year</small>
    </div>
</div>

<div class="jumbotron">
    <h1><a href="@Url.Action("Details", "Student", new { id = User.Identity.GetUserId()})">@User.Identity.GetUserRealName()</a>, welcome!</h1>
    <p>
        Here you can see all the courses you are enrolled in, and also an assignment overview.<br />
        Choose a course or assignment to view details.<br />
        You can also apply to a new course, and get a list over all active and finished assignments.<br />
        Here you can also view your files, or upload a new one.  
    </p>
</div>


<td>
    @*@Html.ActionLink("Apply for new Course", "Index", "Course") |*@
    <a href="@Url.Action("Index", "Course")" class="btn btn-default btn-sm">Apply for new course</a>
    @*@Html.ActionLink("My Files", "Files", new { id = User.Identity.GetUserId() })*@
    <a href="@Url.Action("Index", "File")" class="btn btn-default btn-sm">Your files</a>
    <br /><br />
</td>

<br /><br />

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <h3 class="text-center">My Courses</h3>
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <tr>
                        <th class="text-center">
                            Course
                        </th>
                        <th class="text-center">
                            Description
                        </th>
                    </tr>

                    @{try
                    {
                        foreach (var item in Model.Courses)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "Course", new { id = item.ID })">@item.CourseName</a>
                                    @*@Html.DisplayFor(course => item.CourseName)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(course => item.Description)
                                </td>
                            </tr>
                        }
                    } catch (NullReferenceException)
                    {
                    }
                    }

                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <h3 class="text-center">Assignments overview</h3>
                </div>
            </div>
            <div class="panel-body">

                <table class="table table-bordered">
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Due date
                        </th>
                        <th>
                            Completed
                        </th>
  
                    </tr>

                    @{int maxRenderedRows = 3, countLoops = 0;
                    try
                    {
                        foreach (var assignmt in Model.Assignments)
                        {
                            foreach (var evaluation in assignmt.Evaluations)
                            {
                                if (countLoops < maxRenderedRows && evaluation.Student.Id.Equals(User.Identity.GetUserId()))
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Details_Full", "Assignment", new { id = evaluation.ID })">@evaluation.Assignment.Name</a>
                                            @*@Html.ActionLink(Model.Assignments.ElementAt(i).Name, "Details", "Assignment", new { id = Model.Assignments.ElementAt(i).ID })*@
                                        </td>
                                        <td>
                                            @Html.DisplayFor(assignment => evaluation.Assignment.DueDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(assignment => evaluation.IsPassed)
                                        </td>
                                    </tr>
                                    countLoops++;
                                }

                            }
                        }


                    } catch (NullReferenceException)
                    {
                    }
                    }

                </table>
                @Html.ActionLink("Show all assignments", "IndexUser", "Assignment")
            </div>
        </div>
    </div>
</div>




