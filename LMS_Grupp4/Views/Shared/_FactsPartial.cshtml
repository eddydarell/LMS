@model LMS_Grupp4.Models.LMS_ViewModels.Home_IndexViewModel

<div class="row">
    <div class="col-lg-4 alert alert-info">
        <h2 class="text-center success">@Model.CourseCount</h2>
        <hr />
        <p class="text-center">
            <small class="text-center">
                Courses
            </small>
        </p>
    </div>
    <div class="col-lg-4 alert alert-warning">
        <h2 class="text-center warning">@Model.TeachersCount</h2>
        <hr />
        <p class="text-center"><small class="text-center">Great Teachers</small></p>
    </div>
    <div class="col-lg-4 alert alert-success" style="padding-left: 0px; padding-right:0px">
        <h2 class="text-center danger">@Model.StudentsCount</h2>
        <hr />
        <p class="text-center"><small class="text-center">Greater Students</small></p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 alert alert-danger" style="margin-bottom: 0px">
        <h3 class="text-center">@Model.MostPopularCourse.CourseName</h3>
        <br />
        <p class="text-center"><small class="text-center">Is The Most Popular Course</small></p>
    </div>
</div>
